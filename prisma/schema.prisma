generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Toy {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id      Int     @id @default(autoincrement())
  name    String
  address String?
  number  String
}

model Orders {
  id          Int      @id @default(autoincrement())
  order_id    Int
  customer_id Int
  order_date  DateTime @default(now())
  total_order Float
}
